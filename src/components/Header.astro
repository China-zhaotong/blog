---
import HeaderLink from "./HeaderLink.astro";
import { SITE_TITLE } from "../consts";
import HelloWorld from './vue/HelloWorld.vue';
---

<header
	class="w-full lg:w-6/12 h-26 lg:my-2 bg-shenhuilan text-white p-3 rounded shadow-xl flex justify-between"
>
	<nav>
		<div class="text-2xl font-black">{SITE_TITLE}</div>
		<HeaderLink class="mt-6" href="/">主页</HeaderLink>
		<HeaderLink class="mx-2" href="/blog">博客</HeaderLink>
		<HeaderLink href="/about">个人介绍</HeaderLink>
	</nav>
	<HelloWorld client:load></HelloWorld>
</header>
<style>
	header {
		margin: 0em 0 2em;
	}
	h2 {
		margin: 0.5em 0;
	}
</style>
