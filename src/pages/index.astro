---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
import HelloWorld from '../components/vue/HelloWorld.vue';
import ReactHelloWorld from '../components/react/ReactHelloWorld';
import { Code } from 'astro/components';
---
<!DOCTYPE html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body class="w-full bg-caolvbai">
		<Header title={SITE_TITLE} />
		<main>
		 <HelloWorld></HelloWorld>
		 <ReactHelloWorld></ReactHelloWorld>
		 <Code code={`const foo = 'bar';`} lang="js" theme={'solarized-light'}/>
		</main>
		<Footer />
	</body>
</html>
